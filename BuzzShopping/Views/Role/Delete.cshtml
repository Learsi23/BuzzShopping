@model Business.Entities.RoleEntity
@{
    ViewData["Title"] = "Delete";
}

<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-slate-700">Delete</h1>
    <h3 class="text-xl font-semibold text-slate-700">Are you sure you want to delete this?</h3>
    <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        <h4 class="text-xl font-semibold text-slate-700">RoleEntity</h4>
        <hr class="my-4 border-slate-300" />
        <dl class="grid grid-cols-1 gap-x-4 gap-y-8 sm:grid-cols-2">
            <div class="sm:col-span-1">
                <dt class="text-sm font-medium text-slate-700">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="mt-1 text-sm text-slate-900">
                    @Html.DisplayFor(model => model.Name)
                </dd>
            </div>
            <div class="sm:col-span-1">
                <dt class="text-sm font-medium text-slate-700">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="mt-1 text-sm text-slate-900">
                    @Html.DisplayFor(model => model.Description)
                </dd>
            </div>
        </dl>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="RoleId" />
            <input type="submit" value="Delete" class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" />
            <a asp-action="Index" class="text-slate-700 hover:text-slate-900 ml-2">Back to List</a>
        </form>
    </div>
</div>
