@model Business.Entities.RoleEntity
@{
    ViewData["Title"] = "Create";
}

<div class="container mx-auto px-4 py-8 max-w-2xl">
    <div class="text-center mb-8">
        <h1 class="text-3xl font-extrabold text-slate-800">Create Role</h1>
        <h4 class="text-lg text-slate-600 mt-2">Define a new role for your application</h4>
        <hr class="my-6 border-t border-slate-300" />
    </div>

    <div class="bg-white shadow-lg rounded-lg p-8 mb-6 transition-all duration-200 hover:shadow-xl">
        <form asp-action="Create" method="post" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="bg-red-50 text-red-700 text-sm p-3 rounded border border-red-200"></div>

            <!-- Name Field -->
            <div>
                <label asp-for="Name" class="block text-sm font-semibold text-slate-700 mb-1">
                    Role Name <span class="text-red-500">*</span>
                </label>
                <input asp-for="Name"
                       class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-slate-500 focus:outline-none transition"
                       placeholder="e.g. Administrator" />
                <span asp-validation-for="Name" class="text-red-500 text-xs italic mt-1 block"></span>
            </div>

            <!-- Description Field -->
            <div>
                <label asp-for="Description" class="block text-sm font-semibold text-slate-700 mb-1">
                    Description
                </label>
                <textarea asp-for="Description"
                          rows="4"
                          class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-slate-500 focus:outline-none transition resize-none"
                          placeholder="Brief description of the role's responsibilities..."></textarea>
                <span asp-validation-for="Description" class="text-red-500 text-xs italic mt-1 block"></span>
            </div>

            <!-- Submit Button -->
            <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center space-y-3 sm:space-y-0 pt-2">
                <a asp-action="Index" class="text-slate-600 hover:text-slate-900 font-medium text-sm transition">
                    ← Back to List
                </a>
                <input type="submit" value="Create Role"
                       class="bg-slate-700 hover:bg-slate-800 focus:ring-2 focus:ring-offset-2 focus:ring-slate-500 text-white font-semibold py-2 px-6 rounded-lg shadow transition duration-200 ease-in-out transform hover:scale-105" />
            </div>
        </form>
    </div>

    <div class="text-center mt-6">
        <a asp-action="Index" class="text-sm text-slate-500 hover:text-slate-700 transition">
            Or click here to return to the roles list
        </a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
