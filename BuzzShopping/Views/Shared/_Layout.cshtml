<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BuzzShopping</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/tailwind.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BuzzShopping.styles.css" asp-append-version="true" />
    <!-- SOLO PARA PRUEBAS, NO EN PRODUCCIÓN -->
    <script src="https://cdn.tailwindcss.com"></script>

</head>
<body class="min-h-screen flex flex-col bg-gray-50">
    @await Html.PartialAsync("Partials/_Header")

    <main class="flex-grow">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-6">
            @RenderBody()
        </div>
    </main>

    @await Html.PartialAsync("Partials/_Footer")

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>