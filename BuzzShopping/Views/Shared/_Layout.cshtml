<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BuzzShopping</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/tailwind.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BuzzShopping.styles.css" asp-append-version="true" />
</head>
<body class="min-h-screen flex flex-col bg-gray-50">
    @await Html.PartialAsync("Partials/_Header")

    <main class="flex-grow">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-6">
            @RenderBody()
        </div>
    </main>

    <footer class="bg-white border-t">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-4">
            <div class="flex flex-col md:flex-row justify-between items-center">
                <p class="text-sm text-gray-500">
                    &copy; 2025 BuzzShopping. All rights reserved.
                </p>
                <div class="mt-2 md:mt-0">
                    <a asp-controller="Home" asp-action="Privacy"
                       class="text-sm text-gray-500 hover:text-gray-700">
                        Privacy Policy
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>