@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mx-auto px-4 py-8">
    <div class="bg-white rounded-lg shadow-md p-6">
        <h1 class="text-2xl font-bold text-slate-800 mb-2">Welcome to Dashboard</h1>
        <p class="text-slate-600 mb-6">Manage your application's main entities from here</p>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- Address Card -->
            <a href="@Url.Action("Index", "Address")" class="group">
                <div class="bg-slate-50 hover:bg-slate-100 rounded-lg p-6 transition-colors border border-slate-200 group-hover:border-slate-300">
                    <div class="flex items-center">
                        <div class="bg-slate-700 text-white p-3 rounded-lg mr-6">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                        </div>
                        <h2 class="text-lg font-semibold text-slate-800">Addresses</h2>
                    </div>
                    <p class="mt-3 text-sm text-slate-600">Manage customer and business addresses</p>
                </div>
            </a>

            <!-- Category Card -->
            <a href="@Url.Action("Index", "Category")" class="group">
                <div class="bg-slate-50 hover:bg-slate-100 rounded-lg p-6 transition-colors border border-slate-200 group-hover:border-slate-300">
                    <div class="flex items-center">
                        <div class="bg-slate-700 text-white p-3 rounded-lg mr-6">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z" />
                            </svg>
                        </div>
                        <h2 class="text-lg font-semibold text-slate-800">Categories</h2>
                    </div>
                    <p class="mt-3 text-sm text-slate-600">Organize products into categories</p>
                </div>
            </a>

            <!-- Order Card -->
            <a href="@Url.Action("Index", "Order")" class="group">
                <div class="bg-slate-50 hover:bg-slate-100 rounded-lg p-6 transition-colors border border-slate-200 group-hover:border-slate-300">
                    <div class="flex items-center">
                        <div class="bg-slate-700 text-white p-3 rounded-lg mr-6">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                            </svg>
                        </div>
                        <h2 class="text-lg font-semibold text-slate-800">Orders</h2>
                    </div>
                    <p class="mt-3 text-sm text-slate-600">View and manage customer orders</p>
                </div>
            </a>

            <!-- Order Details Card -->
            <a href="@Url.Action("Index", "OrderDetail")" class="group">
                <div class="bg-slate-50 hover:bg-slate-100 rounded-lg p-6 transition-colors border border-slate-200 group-hover:border-slate-300">
                    <div class="flex items-center">
                        <div class="bg-slate-700 text-white p-3 rounded-lg mr-6">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                            </svg>
                        </div>
                        <h2 class="text-lg font-semibold text-slate-800">Order Details</h2>
                    </div>
                    <p class="mt-3 text-sm text-slate-600">Manage individual order items</p>
                </div>
            </a>

            <!-- Product Card -->
            <a href="@Url.Action("Index", "Product")" class="group">
                <div class="bg-slate-50 hover:bg-slate-100 rounded-lg p-6 transition-colors border border-slate-200 group-hover:border-slate-300">
                    <div class="flex items-center">
                        <div class="bg-slate-700 text-white p-3 rounded-lg mr-6">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                            </svg>
                        </div>
                        <h2 class="text-lg font-semibold text-slate-800">Products</h2>
                    </div>
                    <p class="mt-3 text-sm text-slate-600">Manage your product catalog</p>
                </div>
            </a>

            <!-- Role Card -->
            <a href="@Url.Action("Index", "Role")" class="group">
                <div class="bg-slate-50 hover:bg-slate-100 rounded-lg p-6 transition-colors border border-slate-200 group-hover:border-slate-300">
                    <div class="flex items-center">
                        <div class="bg-slate-700 text-white p-3 rounded-lg mr-6">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                            </svg>
                        </div>
                        <h2 class="text-lg font-semibold text-slate-800">Roles</h2>
                    </div>
                    <p class="mt-3 text-sm text-slate-600">Manage user roles and permissions</p>
                </div>
            </a>

            <!-- User Card -->
            <a href="@Url.Action("Index", "User")" class="group">
                <div class="bg-slate-50 hover:bg-slate-100 rounded-lg p-6 transition-colors border border-slate-200 group-hover:border-slate-300">
                    <div class="flex items-center">
                        <div class="bg-slate-700 text-white p-3 rounded-lg mr-6">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                        </div>
                        <h2 class="text-lg font-semibold text-slate-800">Users</h2>
                    </div>
                    <p class="mt-3 text-sm text-slate-600">Manage system users and accounts</p>
                </div>
            </a>
        </div>
    </div>
</div>