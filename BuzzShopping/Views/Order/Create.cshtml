@model Business.Entities.OrderEntity

@{
    ViewData["Title"] = "Create Order";
}

<div class="max-w-4xl mx-auto p-6">
    <div class="bg-white rounded-lg shadow-md overflow-hidden border border-slate-100">
        <div class="bg-slate-700 p-4 text-white">
            <h1 class="text-xl font-semibold">Create New Order</h1>
            <p class="text-slate-200 text-sm">Enter order details below</p>
        </div>

        <div class="p-6">
            <form asp-action="Create" class="space-y-5">
                <div asp-validation-summary="ModelOnly" class="bg-red-50 border-l-4 border-red-500 p-4 text-red-700 text-sm"></div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Column 1 -->
                    <div class="space-y-5">
                        <div>
                            <label asp-for="OrderNumber" class="block text-sm font-medium text-slate-700 mb-1"></label>
                            <input asp-for="OrderNumber" class="w-full px-3 py-2 border border-slate-300 rounded-md focus:ring-slate-500 focus:border-slate-500 placeholder-slate-400" />
                            <span asp-validation-for="OrderNumber" class="mt-1 text-sm text-red-600"></span>
                        </div>

                        <div>
                            <label asp-for="UserId" class="block text-sm font-medium text-slate-700 mb-1"></label>
                            <select asp-for="UserId" class="w-full px-3 py-2 border border-slate-300 rounded-md focus:ring-slate-500 focus:border-slate-500" asp-items="ViewBag.UserId"></select>
                            <span asp-validation-for="UserId" class="mt-1 text-sm text-red-600"></span>
                        </div>

                        <div>
                            <label asp-for="CustomerName" class="block text-sm font-medium text-slate-700 mb-1"></label>
                            <input asp-for="CustomerName" class="w-full px-3 py-2 border border-slate-300 rounded-md focus:ring-slate-500 focus:border-slate-500 placeholder-slate-400" />
                            <span asp-validation-for="CustomerName" class="mt-1 text-sm text-red-600"></span>
                        </div>

                        <div>
                            <label asp-for="CustomerEmail" class="block text-sm font-medium text-slate-700 mb-1"></label>
                            <input asp-for="CustomerEmail" type="email" class="w-full px-3 py-2 border border-slate-300 rounded-md focus:ring-slate-500 focus:border-slate-500 placeholder-slate-400" />
                            <span asp-validation-for="CustomerEmail" class="mt-1 text-sm text-red-600"></span>
                        </div>

                        <div>
                            <label asp-for="CustomerPhone" class="block text-sm font-medium text-slate-700 mb-1"></label>
                            <input asp-for="CustomerPhone" class="w-full px-3 py-2 border border-slate-300 rounded-md focus:ring-slate-500 focus:border-slate-500 placeholder-slate-400" />
                            <span asp-validation-for="CustomerPhone" class="mt-1 text-sm text-red-600"></span>
                        </div>
                    </div>

                    <!-- Column 2 -->
                    <div class="space-y-5">
                        <div>
                            <label asp-for="Status" class="block text-sm font-medium text-slate-700 mb-1"></label>
                            <select asp-for="Status" class="w-full px-3 py-2 border border-slate-300 rounded-md focus:ring-slate-500 focus:border-slate-500">
                                <option value="Pending">Pending</option>
                                <option value="Processing">Processing</option>
                                <option value="Shipped">Shipped</option>
                                <option value="Delivered">Delivered</option>
                                <option value="Cancelled">Cancelled</option>
                            </select>
                            <span asp-validation-for="Status" class="mt-1 text-sm text-red-600"></span>
                        </div>

                        <div>
                            <label asp-for="ShippingAddressId" class="block text-sm font-medium text-slate-700 mb-1"></label>
                            <select asp-for="ShippingAddressId" class="w-full px-3 py-2 border border-slate-300 rounded-md focus:ring-slate-500 focus:border-slate-500" asp-items="ViewBag.ShippingAddressId"></select>
                            <span asp-validation-for="ShippingAddressId" class="mt-1 text-sm text-red-600"></span>
                        </div>

                        <div>
                            <label asp-for="BillingAddressId" class="block text-sm font-medium text-slate-700 mb-1"></label>
                            <select asp-for="BillingAddressId" class="w-full px-3 py-2 border border-slate-300 rounded-md focus:ring-slate-500 focus:border-slate-500" asp-items="ViewBag.BillingAddressId"></select>
                            <span asp-validation-for="BillingAddressId" class="mt-1 text-sm text-red-600"></span>
                        </div>
                    </div>
                </div>

                <!-- Full width fields -->
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    <div>
                        <label asp-for="CreatedDate" class="block text-sm font-medium text-slate-700 mb-1"></label>
                        <input asp-for="CreatedDate" type="datetime-local" class="w-full px-3 py-2 border border-slate-300 rounded-md focus:ring-slate-500 focus:border-slate-500" />
                        <span asp-validation-for="CreatedDate" class="mt-1 text-sm text-red-600"></span>
                    </div>

                    <div>
                        <label asp-for="PaymentDate" class="block text-sm font-medium text-slate-700 mb-1"></label>
                        <input asp-for="PaymentDate" type="datetime-local" class="w-full px-3 py-2 border border-slate-300 rounded-md focus:ring-slate-500 focus:border-slate-500" />
                        <span asp-validation-for="PaymentDate" class="mt-1 text-sm text-red-600"></span>
                    </div>

                    <div>
                        <label asp-for="ShippedDate" class="block text-sm font-medium text-slate-700 mb-1"></label>
                        <input asp-for="ShippedDate" type="datetime-local" class="w-full px-3 py-2 border border-slate-300 rounded-md focus:ring-slate-500 focus:border-slate-500" />
                        <span asp-validation-for="ShippedDate" class="mt-1 text-sm text-red-600"></span>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
                    <div>
                        <label asp-for="Subtotal" class="block text-sm font-medium text-slate-700 mb-1"></label>
                        <input asp-for="Subtotal" class="w-full px-3 py-2 border border-slate-300 rounded-md focus:ring-slate-500 focus:border-slate-500" />
                        <span asp-validation-for="Subtotal" class="mt-1 text-sm text-red-600"></span>
                    </div>

                    <div>
                        <label asp-for="ShippingCost" class="block text-sm font-medium text-slate-700 mb-1"></label>
                        <input asp-for="ShippingCost" class="w-full px-3 py-2 border border-slate-300 rounded-md focus:ring-slate-500 focus:border-slate-500" />
                        <span asp-validation-for="ShippingCost" class="mt-1 text-sm text-red-600"></span>
                    </div>

                    <div>
                        <label asp-for="DiscountAmount" class="block text-sm font-medium text-slate-700 mb-1"></label>
                        <input asp-for="DiscountAmount" class="w-full px-3 py-2 border border-slate-300 rounded-md focus:ring-slate-500 focus:border-slate-500" />
                        <span asp-validation-for="DiscountAmount" class="mt-1 text-sm text-red-600"></span>
                    </div>

                    <div>
                        <label asp-for="Total" class="block text-sm font-medium text-slate-700 mb-1"></label>
                        <input asp-for="Total" class="w-full px-3 py-2 border border-slate-300 rounded-md focus:ring-slate-500 focus:border-slate-500 bg-slate-100" readonly />
                        <span asp-validation-for="Total" class="mt-1 text-sm text-red-600"></span>
                    </div>
                </div>

                <div class="flex justify-between pt-4 border-t border-slate-200">
                    <a asp-action="Index" class="inline-flex items-center px-4 py-2 border border-slate-300 shadow-sm text-sm font-medium rounded-md text-slate-700 bg-white hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-500">
                        Back to List
                    </a>
                    <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-slate-700 hover:bg-slate-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-500">
                        Create Order
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}