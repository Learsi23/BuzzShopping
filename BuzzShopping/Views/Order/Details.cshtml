@model Business.Entities.OrderEntity
@{
    ViewData["Title"] = "Details";
}

<div class="max-w-4xl mx-auto p-6">
    <div class="bg-white rounded-lg shadow-md overflow-hidden border border-slate-100">
        <div class="bg-slate-700 p-4 text-white">
            <h1 class="text-xl font-semibold">Order Details</h1>
            <p class="text-slate-200 text-sm">View order details below</p>
        </div>
        <div class="p-6">
            <div class="space-y-5">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Column 1 -->
                    <div class="space-y-5">
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">@Html.DisplayNameFor(model => model.OrderNumber)</label>
                            <div class="w-full px-3 py-2 border border-slate-300 rounded-md bg-slate-100">@Html.DisplayFor(model => model.OrderNumber)</div>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">@Html.DisplayNameFor(model => model.User)</label>
                            <div class="w-full px-3 py-2 border border-slate-300 rounded-md bg-slate-100">@Html.DisplayFor(model => model.User.Email)</div>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">@Html.DisplayNameFor(model => model.CustomerName)</label>
                            <div class="w-full px-3 py-2 border border-slate-300 rounded-md bg-slate-100">@Html.DisplayFor(model => model.CustomerName)</div>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">@Html.DisplayNameFor(model => model.CustomerEmail)</label>
                            <div class="w-full px-3 py-2 border border-slate-300 rounded-md bg-slate-100">@Html.DisplayFor(model => model.CustomerEmail)</div>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">@Html.DisplayNameFor(model => model.CustomerPhone)</label>
                            <div class="w-full px-3 py-2 border border-slate-300 rounded-md bg-slate-100">@Html.DisplayFor(model => model.CustomerPhone)</div>
                        </div>
                    </div>
                    <!-- Column 2 -->
                    <div class="space-y-5">
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">@Html.DisplayNameFor(model => model.Status)</label>
                            <div class="w-full px-3 py-2 border border-slate-300 rounded-md bg-slate-100">@Html.DisplayFor(model => model.Status)</div>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">@Html.DisplayNameFor(model => model.ShippingAddress)</label>
                            <div class="w-full px-3 py-2 border border-slate-300 rounded-md bg-slate-100">@Html.DisplayFor(model => model.ShippingAddress.City)</div>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">@Html.DisplayNameFor(model => model.BillingAddress)</label>
                            <div class="w-full px-3 py-2 border border-slate-300 rounded-md bg-slate-100">@Html.DisplayFor(model => model.BillingAddress.City)</div>
                        </div>
                    </div>
                </div>
                <!-- Full width fields -->
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-slate-700 mb-1">@Html.DisplayNameFor(model => model.CreatedDate)</label>
                        <div class="w-full px-3 py-2 border border-slate-300 rounded-md bg-slate-100">@Html.DisplayFor(model => model.CreatedDate)</div>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-slate-700 mb-1">@Html.DisplayNameFor(model => model.PaymentDate)</label>
                        <div class="w-full px-3 py-2 border border-slate-300 rounded-md bg-slate-100">@Html.DisplayFor(model => model.PaymentDate)</div>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-slate-700 mb-1">@Html.DisplayNameFor(model => model.ShippedDate)</label>
                        <div class="w-full px-3 py-2 border border-slate-300 rounded-md bg-slate-100">@Html.DisplayFor(model => model.ShippedDate)</div>
                    </div>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-slate-700 mb-1">@Html.DisplayNameFor(model => model.Subtotal)</label>
                        <div class="w-full px-3 py-2 border border-slate-300 rounded-md bg-slate-100">@Html.DisplayFor(model => model.Subtotal)</div>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-slate-700 mb-1">@Html.DisplayNameFor(model => model.ShippingCost)</label>
                        <div class="w-full px-3 py-2 border border-slate-300 rounded-md bg-slate-100">@Html.DisplayFor(model => model.ShippingCost)</div>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-slate-700 mb-1">@Html.DisplayNameFor(model => model.DiscountAmount)</label>
                        <div class="w-full px-3 py-2 border border-slate-300 rounded-md bg-slate-100">@Html.DisplayFor(model => model.DiscountAmount)</div>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-slate-700 mb-1">@Html.DisplayNameFor(model => model.Total)</label>
                        <div class="w-full px-3 py-2 border border-slate-300 rounded-md bg-slate-100">@Html.DisplayFor(model => model.Total)</div>
                    </div>
                </div>
                <div class="flex justify-between pt-4 border-t border-slate-200">
                    <a asp-action="Index" class="inline-flex items-center px-4 py-2 border border-slate-300 shadow-sm text-sm font-medium rounded-md text-slate-700 bg-white hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-500">
                        Back to List
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model?.OrderId" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-slate-700 hover:bg-slate-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-500">
                        Edit
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
