@model Business.DTOs.UserRegisterDto

@{
    ViewData["Title"] = "Create User";
}

<div class="max-w-4xl mx-auto py-8">
    <div class="bg-white shadow rounded-lg p-6">
        <h1 class="text-2xl font-bold text-slate-700 mb-2">Create New User</h1>
        <p class="text-slate-600 mb-6">Fill in the form below to register a new user</p>

        <div class="border-b border-slate-200 mb-6"></div>

        <form asp-action="Create" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm"></div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="FirstName" class="block text-sm font-medium text-slate-700"></label>
                    <input asp-for="FirstName" class="mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-slate-500 focus:ring-slate-500 sm:text-sm" />
                    <span asp-validation-for="FirstName" class="text-red-500 text-xs"></span>
                </div>

                <div>
                    <label asp-for="LastName" class="block text-sm font-medium text-slate-700"></label>
                    <input asp-for="LastName" class="mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-slate-500 focus:ring-slate-500 sm:text-sm" />
                    <span asp-validation-for="LastName" class="text-red-500 text-xs"></span>
                </div>

                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-slate-700"></label>
                    <input asp-for="Email" class="mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-slate-500 focus:ring-slate-500 sm:text-sm" />
                    <span asp-validation-for="Email" class="text-red-500 text-xs"></span>
                </div>

                <div>
                    <label asp-for="PhoneNumber" class="block text-sm font-medium text-slate-700"></label>
                    <input asp-for="PhoneNumber" class="mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-slate-500 focus:ring-slate-500 sm:text-sm" />
                    <span asp-validation-for="PhoneNumber" class="text-red-500 text-xs"></span>
                </div>

                <div>
                    <label asp-for="Password" class="block text-sm font-medium text-slate-700"></label>
                    <input asp-for="Password" type="password" class="mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-slate-500 focus:ring-slate-500 sm:text-sm" />
                    <span asp-validation-for="Password" class="text-red-500 text-xs"></span>
                </div>

                <div>
                    <label asp-for="RoleId" class="block text-sm font-medium text-slate-700"></label>
                    <select asp-for="RoleId" asp-items="ViewBag.RoleId" class="mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-slate-500 focus:ring-slate-500 sm:text-sm"></select>
                </div>

                <div>
                    <label asp-for="Addresses[0].StreetAddress" class="block text-sm font-medium text-slate-700"></label>
                    <select asp-for="Addresses[0].StreetAddress" class="mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-slate-500 focus:ring-slate-500 sm:text-sm"></select>
                </div>
            </div>

            <div class="flex items-center justify-end gap-x-3 pt-4">
                <a asp-action="Index" class="inline-flex items-center px-4 py-2 border border-slate-300 shadow-sm text-sm font-medium rounded-md text-slate-700 bg-white hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-500">
                    Back to List
                </a>
                <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-slate-700 hover:bg-slate-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-500">
                    Create User
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}