@model Business.Entities.UserEntity

@{
    ViewData["Title"] = "User Details";
}

<div class="max-w-4xl mx-auto py-8">
    <div class="bg-white shadow rounded-lg p-6">
        <div class="flex justify-between items-start">
            <div>
                <h1 class="text-2xl font-bold text-slate-700">User Details</h1>
                <p class="text-slate-600">View all details for this user account</p>
            </div>
            <div class="flex space-x-2">
                <a asp-action="Edit" asp-route-id="@Model?.UserId" class="inline-flex items-center px-3 py-1 border border-slate-300 shadow-sm text-sm font-medium rounded-md text-slate-700 bg-white hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-500">
                    Edit
                </a>
                <a asp-action="Index" class="inline-flex items-center px-3 py-1 border border-slate-300 shadow-sm text-sm font-medium rounded-md text-slate-700 bg-white hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-500">
                    Back to List
                </a>
            </div>
        </div>

        <div class="border-b border-slate-200 my-6"></div>

        <div class="bg-slate-50 rounded-lg p-6">
            <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div class="py-2">
                    <dt class="text-sm font-medium text-slate-500">Full Name</dt>
                    <dd class="mt-1 text-sm text-slate-900">@Html.DisplayFor(model => model.Name)</dd>
                </div>
                <div class="py-2">
                    <dt class="text-sm font-medium text-slate-500">Email</dt>
                    <dd class="mt-1 text-sm text-slate-900">@Html.DisplayFor(model => model.Email)</dd>
                </div>
                <div class="py-2">
                    <dt class="text-sm font-medium text-slate-500">Phone Number</dt>
                    <dd class="mt-1 text-sm text-slate-900">@Html.DisplayFor(model => model.PhoneNumber)</dd>
                </div>
                <div class="py-2">
                    <dt class="text-sm font-medium text-slate-500">Account Status</dt>
                    <dd class="mt-1 text-sm text-slate-900">
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium @(Model.IsActive ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800")">
                            @(Model.IsActive ? "Active" : "Inactive")
                        </span>
                    </dd>
                </div>
                <div class="py-2">
                    <dt class="text-sm font-medium text-slate-500">Role</dt>
                    <dd class="mt-1 text-sm text-slate-900">@Html.DisplayFor(model => model.Role.Name)</dd>
                </div>
                <div class="py-2">
                    <dt class="text-sm font-medium text-slate-500">Created Date</dt>
                    <dd class="mt-1 text-sm text-slate-900">@Html.DisplayFor(model => model.CreatedDate)</dd>
                </div>
                <div class="py-2">
                    <dt class="text-sm font-medium text-slate-500">Last Login</dt>
                    <dd class="mt-1 text-sm text-slate-900">@Html.DisplayFor(model => model.LastLoginDate)</dd>
                </div>
            </dl>
        </div>
    </div>
</div>