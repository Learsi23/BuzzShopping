@model Business.Entities.ProductEntity

@{
    ViewData["Title"] = "Edit Product";
}

<div class="max-w-4xl mx-auto p-6">
    <div class="bg-white rounded-lg shadow-md overflow-hidden border border-slate-100">
        <div class="bg-slate-700 p-4 text-white">
            <h1 class="text-xl font-semibold">Edit Product</h1>
            <p class="text-slate-200 text-sm">Update product details</p>
        </div>

        <div class="p-6">
            <form asp-action="Edit" class="space-y-5">
                <div asp-validation-summary="ModelOnly" class="bg-red-50 border-l-4 border-red-500 p-4 text-red-700 text-sm"></div>
                <input type="hidden" asp-for="ProductId" />

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Column 1 -->
                    <div class="space-y-5">
                        <div>
                            <label asp-for="Code" class="block text-sm font-medium text-slate-700 mb-1"></label>
                            <input asp-for="Code" class="w-full px-3 py-2 border border-slate-300 rounded-md focus:ring-slate-500 focus:border-slate-500 placeholder-slate-400" />
                            <span asp-validation-for="Code" class="mt-1 text-sm text-red-600"></span>
                        </div>

                        <div>
                            <label asp-for="Name" class="block text-sm font-medium text-slate-700 mb-1"></label>
                            <input asp-for="Name" class="w-full px-3 py-2 border border-slate-300 rounded-md focus:ring-slate-500 focus:border-slate-500 placeholder-slate-400" />
                            <span asp-validation-for="Name" class="mt-1 text-sm text-red-600"></span>
                        </div>

                        <div>
                            <label asp-for="Model" class="block text-sm font-medium text-slate-700 mb-1"></label>
                            <input asp-for="Model" class="w-full px-3 py-2 border border-slate-300 rounded-md focus:ring-slate-500 focus:border-slate-500 placeholder-slate-400" />
                            <span asp-validation-for="Model" class="mt-1 text-sm text-red-600"></span>
                        </div>

                        <div>
                            <label asp-for="Brand" class="block text-sm font-medium text-slate-700 mb-1"></label>
                            <input asp-for="Brand" class="w-full px-3 py-2 border border-slate-300 rounded-md focus:ring-slate-500 focus:border-slate-500 placeholder-slate-400" />
                            <span asp-validation-for="Brand" class="mt-1 text-sm text-red-600"></span>
                        </div>

                        <div>
                            <label asp-for="Description" class="block text-sm font-medium text-slate-700 mb-1"></label>
                            <textarea asp-for="Description" rows="3" class="w-full px-3 py-2 border border-slate-300 rounded-md focus:ring-slate-500 focus:border-slate-500 placeholder-slate-400"></textarea>
                            <span asp-validation-for="Description" class="mt-1 text-sm text-red-600"></span>
                        </div>
                    </div>

                    <!-- Column 2 -->
                    <div class="space-y-5">
                        <div>
                            <label asp-for="Price" class="block text-sm font-medium text-slate-700 mb-1"></label>
                            <input asp-for="Price" class="w-full px-3 py-2 border border-slate-300 rounded-md focus:ring-slate-500 focus:border-slate-500 placeholder-slate-400" />
                            <span asp-validation-for="Price" class="mt-1 text-sm text-red-600"></span>
                        </div>

                        <div>
                            <label asp-for="SpecialOfferPrice" class="block text-sm font-medium text-slate-700 mb-1"></label>
                            <input asp-for="SpecialOfferPrice" class="w-full px-3 py-2 border border-slate-300 rounded-md focus:ring-slate-500 focus:border-slate-500 placeholder-slate-400" />
                            <span asp-validation-for="SpecialOfferPrice" class="mt-1 text-sm text-red-600"></span>
                        </div>

                        <div>
                            <label asp-for="DiscountPercentage" class="block text-sm font-medium text-slate-700 mb-1"></label>
                            <input asp-for="DiscountPercentage" class="w-full px-3 py-2 border border-slate-300 rounded-md focus:ring-slate-500 focus:border-slate-500 placeholder-slate-400" />
                            <span asp-validation-for="DiscountPercentage" class="mt-1 text-sm text-red-600"></span>
                        </div>

                        <div class="flex items-center">
                            <input asp-for="HasSpecialOffer" class="h-4 w-4 text-slate-700 focus:ring-slate-500 border-slate-300 rounded" />
                            <label asp-for="HasSpecialOffer" class="ml-2 block text-sm text-slate-700"></label>
                        </div>

                        <div>
                            <label asp-for="CategoryId" class="block text-sm font-medium text-slate-700 mb-1"></label>
                            <select asp-for="CategoryId" asp-items="ViewBag.CategoryId" class="w-full px-3 py-2 border border-slate-300 rounded-md focus:ring-slate-500 focus:border-slate-500 placeholder-slate-400"></select>
                            <span asp-validation-for="CategoryId" class="mt-1 text-sm text-red-600"></span>
                        </div>
                    </div>
                </div>

                <!-- Full width fields -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="Image" class="block text-sm font-medium text-slate-700 mb-1"></label>
                        <input asp-for="Image" class="w-full px-3 py-2 border border-slate-300 rounded-md focus:ring-slate-500 focus:border-slate-500 placeholder-slate-400" />
                        <span asp-validation-for="Image" class="mt-1 text-sm text-red-600"></span>
                    </div>

                    <div>
                        <label asp-for="ProductUrl" class="block text-sm font-medium text-slate-700 mb-1"></label>
                        <input asp-for="ProductUrl" class="w-full px-3 py-2 border border-slate-300 rounded-md focus:ring-slate-500 focus:border-slate-500 placeholder-slate-400" />
                        <span asp-validation-for="ProductUrl" class="mt-1 text-sm text-red-600"></span>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    <div>
                        <label asp-for="Stock" class="block text-sm font-medium text-slate-700 mb-1"></label>
                        <input asp-for="Stock" class="w-full px-3 py-2 border border-slate-300 rounded-md focus:ring-slate-500 focus:border-slate-500 placeholder-slate-400" />
                        <span asp-validation-for="Stock" class="mt-1 text-sm text-red-600"></span>
                    </div>

                    <div class="flex items-center">
                        <input asp-for="Active" class="h-4 w-4 text-slate-700 focus:ring-slate-500 border-slate-300 rounded" />
                        <label asp-for="Active" class="ml-2 block text-sm text-slate-700"></label>
                    </div>

                    <div class="flex items-center">
                        <input asp-for="IsFeatured" class="h-4 w-4 text-slate-700 focus:ring-slate-500 border-slate-300 rounded" />
                        <label asp-for="IsFeatured" class="ml-2 block text-sm text-slate-700"></label>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="CreatedDate" class="block text-sm font-medium text-slate-700 mb-1"></label>
                        <input asp-for="CreatedDate" class="w-full px-3 py-2 border border-slate-300 rounded-md focus:ring-slate-500 focus:border-slate-500 placeholder-slate-400" readonly />
                        <span asp-validation-for="CreatedDate" class="mt-1 text-sm text-red-600"></span>
                    </div>

                    <div>
                        <label asp-for="LastUpdatedDate" class="block text-sm font-medium text-slate-700 mb-1"></label>
                        <input asp-for="LastUpdatedDate" class="w-full px-3 py-2 border border-slate-300 rounded-md focus:ring-slate-500 focus:border-slate-500 placeholder-slate-400" readonly />
                        <span asp-validation-for="LastUpdatedDate" class="mt-1 text-sm text-red-600"></span>
                    </div>
                </div>

                <div class="flex justify-between pt-4 border-t border-slate-200">
                    <a asp-action="Index" class="inline-flex items-center px-4 py-2 border border-slate-300 shadow-sm text-sm font-medium rounded-md text-slate-700 bg-white hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-500">
                        Back to List
                    </a>
                    <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-slate-700 hover:bg-slate-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-500">
                        Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}